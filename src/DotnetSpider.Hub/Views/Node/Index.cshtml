<h4>
    AGENT NODES
</h4>
<table class="card bordered highlight responsive-table centered" id="view">
    <thead>
        <tr>
            <th width="5">#</th>
            <th width="80">NODE</th>
            <th>ENABLE</th>
            <th>ONLINE</th>
            <th>CPU | CORE</th>
            <th>MEM(M)</th>
            <th width="60">TYPE</th>
            <th width="60">OS</th>
            <th width="40">PROCESS</th>
            <th>VERSION</th>
            <th>ACTION</th>
        </tr>
    </thead>
    <tbody>
        <tr v-show="nodes.length==0">
            <td colspan="13">
                No data to display...
            </td>
        </tr>
        <tr v-for="node in nodes" :node-id="node.nodeId">
            <td><span :style="{'background-color': node.isOnline?'green':'red'}"> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span> </td>
            <td><span v-text="node.nodeId"></span></td>
            <td><span v-text="node.isEnable"></span></td>
            <td><span v-text="node.isOnline" :style="{'color': node.isOnline?'green':'red', 'font-weight' : '700'}"></span></td>
            <td><span v-text="node.cpuLoad"></span> | <span v-text="node.cpuCoreCount"></span></td>
            <td><span v-text="node.freeMemory"></span> / <span v-text="node.totalMemory"></span></td>
            <td><span v-text="node.type"></span></td>
            <td><span v-text="node.os"></span></td>
            <td><span v-text="node.processCount"></span></td>
            <td><span v-text="node.version"></span></td>
            <td>
                <button class="waves-effect waves-light btn-small" @@click.stop="disable(node.nodeId)" :disabled="!node.isEnable">Disable</button>
                <button class="waves-effect waves-light btn-small" @@click.stop="enable(node.nodeId)" :disabled="node.isEnable"> Enable</button>
                <button class="waves-effect waves-light btn-small" @@click.stop="exit(node.nodeId)">Exit</button>
                <button class="waves-effect waves-light btn-small" @@click.stop="remove(node.nodeId)">Remove</button>
                <a class="waves-effect waves-light btn-small" :href="'/node/dashboard?nodeId=' + node.nodeId">Dashboard(has a error!)</a>
            </td>
        </tr>
    </tbody>
</table>
@section scripts{
    <script src="~/js/node.js" asp-append-version="true"></script>
}
