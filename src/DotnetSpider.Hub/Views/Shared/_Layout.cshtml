<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>DotnetSpider.Hub</title>

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,300i,400,400i,500,500i,700,700i|Roboto+Mono:300,400,700|Roboto+Slab:300,400,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/css/materialize.min.css" rel="stylesheet"  asp-append-version="true"/>
    <link href="~/css/sweetalert.css" rel="stylesheet"  asp-append-version="true"/>
    <link href="~/css/site.css" rel="stylesheet"  asp-append-version="true"/>
    @if (IsSectionDefined("styles"))
    {
        @RenderSection("styles")
    }
</head>
<body>
    <nav class="white" role="navigation">
        <div class="nav-wrapper container">
            <ul class="right sidenav">
                <li> <a href="https://github.com/zlzforever/DotnetSpider.Hub">Fork me</a></li>
            </ul>
            <partial name="_LoginPartial" />
            <ul id="nav" class="left hide-on-med-and-down">
                <li>
                    <a href="#" class="logo">DotnetSpider Hub</a>
                </li>
                <li>
                    <a href="/">Dashboard</a>
                </li>
                <li>
                    <a href="/node">Node</a>
                </li>
                <li>
                    <a href="/task">Task</a>
                </li>
                <li>
                    <a href="/runningtask">Running</a>
                </li>
                <li>
                    <a href="/taskstatus">Status</a>
                </li>
            </ul>
            <a href="#" data-target="nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        </div>
    </nav>
    <div class="container">
       <h1>================</h1>
        @RenderBody()
        <h1>===============</h1>
    </div>

    <!--  Scripts-->
    <script src="~/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/js/jquery.twbsPagination.min.js" asp-append-version="true"></script>
    <script src="~/js/materialize.min.js" asp-append-version="true"></script>
    <script src="~/js/sweetalert.min.js" asp-append-version="true"></script>
    <script src="~/js/vue.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js"  asp-append-version="true"></script>

    @if (IsSectionDefined("scripts"))
    {
        @RenderSection("scripts", true)
    }
</body>
</html>
